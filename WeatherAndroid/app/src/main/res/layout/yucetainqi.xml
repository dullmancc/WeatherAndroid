<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:text="今天"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/todayweatherlogo"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="3dp"
            android:scaleType="fitEnd"
            android:src="@drawable/c999" />
        <TextView
            android:id="@+id/todayweather"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="bingbao"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/todaywendu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:text="23 / 12℃"
            android:textSize="15dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:text="明天"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/tomordayweatherlogo"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="3dp"
            android:scaleType="fitEnd"
            android:src="@drawable/c999" />
        <TextView
            android:id="@+id/tomordayweather"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="阴"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tomorwendu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:text="23 / 13℃"
            android:textSize="15dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:text="后天"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/houtianweatherlogo"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="3dp"
            android:scaleType="fitEnd"
            android:src="@drawable/c999" />
        <TextView
            android:id="@+id/houtianweather"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="小雨 | 良"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/houtianwendu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19 / 13℃"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>